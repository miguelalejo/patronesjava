<?xml version="1.0"?>
<ruleset name="PMD Basico Burbuja" xmlns="http://pmd.sourceforge.net/ruleset/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 http://pmd.sourceforge.net/ruleset_2_0_0.xsd">
  <description>Aplicacion test patrones de disenio java
  </description>
  <rule ref="rulesets/java/basic.xml"/>
  <rule ref="rulesets/java/unusedcode.xml"/>
  <rule ref="rulesets/java/naming.xml">    
    <exclude name="LongVariable"/>
    <exclude name="VariableNamingConventions"/>
    <exclude name="AbstractNaming"/>
    <exclude name="MisleadingVariableName"/>
    <exclude name="ShortClassName"/>
  </rule>
  <rule ref="rulesets/java/braces.xml"/>
  <rule ref="rulesets/java/codesize.xml">
  	 <exclude name="TooManyMethods"/> 
  </rule>
  <rule ref="rulesets/java/coupling.xml">
    <exclude name="LawOfDemeter"/>
  </rule>
  <rule ref="rulesets/java/imports.xml"/>
  <rule ref="rulesets/java/junit.xml">
    <exclude name="JUnitStaticSuite"/>
    <exclude name="JUnitSpelling"/>
    <exclude name="UnnecessaryBooleanAssertion"/>
    <exclude name="JUnitTestsShouldIncludeAssert"/>
  </rule>
  <rule ref="rulesets/java/javabeans.xml">
    <exclude name="BeanMembersShouldSerialize"/>
  </rule>
</ruleset>